<%- include('../partials/header') %>
<section>
    <table cellspacing="50">
      <tbody class="tableHeader">
        <tr class="tableHeader">
          <th class="tableHeader">Rank</th>
          <th class="tableHeader">Name</th>
          <th class="tableHeader">Symbol</th>
          <th class="tableHeader">Price USD</th>
          <th class="tableHeader">Amount</th>
          <th class="tableHeader">Portfolio Value</th>
        </tr>
        <% coins.forEach(function(c) { %>
             <tr class="tableHeader">
                <td><%= c.rank %> </td>
                <td><%= c.name %> </td>
                <td><%= c.symbol %> </td>
                <td>$<%= c.price_usd %> </td>
                <td><%= c.amount %> </td>
                <td><%= c.price_usd*c.amount %> </td>
                <td><a href="/coins/<%= c._id %>">Info</a></td>
                <td>
                <a href="/coins/<%= c._id %>/edit">Edit</a> 
                </td>
                <td>
                    <form action="/coins/<%= c.id %>?_method=DELETE" method="POST" class="delete-form">
                    <button type="submit">Delete</button>
                </form></td>
            </tr>
        <% }) %>

<%- include('../partials/footer') %>